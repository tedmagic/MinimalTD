<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simonzeiger.minimaltd">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.simonzeiger.minimaltd.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.simonzeiger.minimaltd.FABActivity"
            android:label="Add Task"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.simonzeiger.minimaltd.SettingsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.simonzeiger.minimaltd.InfoActivity"
            android:label="Info"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
